/* Media queries for different views */
/* Desktop view */
@media screen and (min-width: 992px) {
    .menu {
        width: 100%;
    }
}

/* Tablet view */
@media screen and (min-width: 768px) and (max-width: 991px) {
    .menu {
        width: 50%;
        margin: auto;
    }
}

/* Mobile view */
@media screen and (max-width: 767px) {
    .menu {
        width: 100%;
        margin: auto;
    }
    .food-section {
        flex: 0 0 100%;
    }
}
